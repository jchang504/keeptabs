{
    "manifest_version": 2,
    "name": "KeepTabs",
    "version": "1.0.0",
    "version_name": "Initial Release",
    "description": "Keep tabs on your tabs.",
    "permissions": [
      "tabs",
      "storage"
    ],
    "browser_action": {
          "default_icon": "icons/icon48.png",
          "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["jquery-3.1.1.slim.min.js", "hotkeys.js"],
        "run_at": "document_start"
    }],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
